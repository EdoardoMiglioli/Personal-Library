<%- include("header.ejs") %>
<main>
    <form class="book-form mb-3" action="/post" method="post">
      <div class="mb-3">
        <label class="form-label">Book's title</label>
        <input type="text" name="title" class="form-control" id="book-form-title" placeholder="Type book's name">
      </div>

      <br>

      <label class="form-label">Rate the book</label>
      <select name="rating" class="form-control" id="book-form-rating">
        <option value="0">0</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
      </select>

      <br>

      <div class="mb-3">
        <label class="form-label">ISBN</label>
        <input type="text" name="isbn" class="form-control" id="book-form-isbn" placeholder="Type book's isbn">
      </div>

      <div class="mb-3">
        <label class="form-label">Personal notes</label>
        <textarea name="personalNotes" class="form-control" id="book-form-textera" placeholder="Type your personal notes if you have" rows="3"></textarea>
      </div>

      <button class="btn" type="submit">Submit</button>
    </form>
</main>
<%- include("footer.ejs") %>
